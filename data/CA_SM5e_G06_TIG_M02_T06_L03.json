      "overview_item_content_type": "html",
      "overview_item_title": "My Learning Goals",
      "overview_item_data": {
        "overview_item_data_type": "list",
        "overview_item_data_items": [
          "I can use unit rates and unit rate language to make comparisons.",
          "I can write and calculate unit rates.",
          "I can use unit rates to solve problems involving unit pricing, better buys, and constant speeds."
        ]
      }
