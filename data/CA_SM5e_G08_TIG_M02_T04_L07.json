      "overview_item_content_type": "html",
      "overview_item_title": "My Learning Goals",
      "overview_item_data": {
        "overview_item_data_type": "list",
        "overview_item_data_items": [
          "I can use transformations to graph linear relationships.",
          "I can dilate linear graphs vertically.",
          "I can translate linear graphs vertically.",
          "I can translate, rotate, and reflect parallel lines."
        ]
      }
    },
