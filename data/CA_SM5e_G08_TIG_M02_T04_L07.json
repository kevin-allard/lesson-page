    },
    {
      "overview_item_type": "essential_ideas",
      "overview_item_content_type": "html",
      "overview_item_title": "Essential Ideas",
      "overview_item_data": {
        "overview_item_data_type": "list",
        "overview_item_data_items": [
          "When you vertically dilate a line by a nonzero factor other than 1, the slope of the line changes by that factor.",
          "When you vertically translate a line, the slope remains the same, but the intercepts change.",
          "You can graph linear relationships using transformations.",
          "When lines are parallel to each other, the slope values in their equations are equal.",
          "Translating, reflecting, or rotating a line results in a line parallel to the original line."
        ]
      }
    },
